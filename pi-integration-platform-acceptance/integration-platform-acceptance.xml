<?xml version="1.0" encoding="UTF-8"?>
<suite name="Integration-Platform-Acceptance" verbose="2">
	<listeners>
		<listener
			class-name="com.intuit.ifs.csscat.core.TestValidationErrorListener" />
		<listener class-name="org.uncommons.reportng.HTMLReporter" />
		<listener
			class-name="org.uncommons.reportng.JUnitXMLReporter" />
		<listener
			class-name="com.epam.reportportal.testng.ReportPortalTestNGListener" />
	</listeners>

	<test name="Integration-Platform-Acceptance">
		<groups>
			<run>
				<include name="AcceptanceTests" />
			</run>
		</groups>
		<classes>
			<class
				name="com.intuit.ihg.product.integrationplatform.test.IntegrationPlatformAcceptanceTests" />
			<class
				name="com.intuit.ihg.product.integrationplatform.test.IntegrationPlatformRegressionTests" />
		</classes>
	</test>
</suite>
