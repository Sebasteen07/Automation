<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
   <modelVersion>4.0.0</modelVersion>
   
   
  <parent>
		<groupId>com.intuit.ihg</groupId>
		<artifactId>ihg-depot-qa-parent-pom</artifactId>
		<version>20.6.0-SNAPSHOT</version>
	</parent>
  
 
  <groupId>mu2-api-automation</groupId>
  <artifactId>mu2-api-automation</artifactId>
 <packaging>jar</packaging>
  
  <repositories>
		<repository>
			<id>IHG-nexus</id>
			<name>IHG-nexus</name>
			<url>
http://maven.qhg.local/nexus/content/groups/qhg-dev/
</url>
		</repository>
	</repositories>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<ihg.version>20.6.0-SNAPSHOT</ihg.version>
	</properties>
	<dependencies>
		<dependency>
			<groupId>com.intuit.ihg</groupId>
			<artifactId>qa-automation-utils</artifactId>
			<version>${ihg.version}</version>
		</dependency>
		
				
		<dependency>
	                 <groupId>com.intuit.api.security</groupId>
                     <artifactId>oauth-core-common</artifactId>
                     <version>${ihg.version}</version>
             </dependency>
              
              <dependency>
                     <groupId>com.intuit.api.security</groupId>
                     <artifactId>oauth-core-client-bootstrap</artifactId>
                     <version>${ihg.version}</version>
              </dependency>
              
              <dependency>
                     <groupId>com.intuit.api.security</groupId>
                     <artifactId>oauth-core-client</artifactId>
                     <version>${ihg.version}</version>
              </dependency>
                                   
       	<dependency>
			<groupId>com.sun.xml.bind</groupId>
			<artifactId>jaxb-xjc</artifactId>
			<version>2.0.3</version>
		</dependency>


		<dependency>
			<groupId>com.sun.xml.bind</groupId>
			<artifactId>jaxb-impl</artifactId>
			<version>2.1.3</version>
		</dependency>
		
			<dependency>
			<groupId>xmlunit</groupId>
			<artifactId>xmlunit</artifactId>
			<version>1.3</version>
		</dependency>
				
       		<dependency>
			<groupId>com.jayway.awaitility</groupId>
			<artifactId>awaitility</artifactId>
			<version>1.3.2</version>
		</dependency>
       		<dependency>
       			<groupId>com.intuit.ihg</groupId>
       			<artifactId>object-maps</artifactId>
       			<version>${ihg.version}</version>
       		</dependency>
       		<dependency>
       			<groupId>com.intuit.ihg</groupId>
       			<artifactId>patientportal2-object-maps</artifactId>
       			<version>${ihg.version}</version>
       		</dependency>
       		<dependency>
       			<groupId>com.intuit.ihg</groupId>
       			<artifactId>patientportal1-object-maps</artifactId>
       			<version>${ihg.version}</version>
       		</dependency>
       		<dependency>
       			<groupId>com.intuit.ihg</groupId>
       			<artifactId>integrationplatform-api</artifactId>
       			<version>${ihg.version}</version>
       		</dependency>
	</dependencies>
	
	

	<build>
		<plugins>
			<plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.10</version>
                <configuration>
                    <skipTests>true</skipTests>
                </configuration>
            </plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-failsafe-plugin</artifactId>
				<version>2.9</version>
				<executions>
					<execution>
						<phase>integration-test</phase>
						<configuration>
							<failBuild>false</failBuild>
							<!-- <groups>${testGroups}</groups> -->
							<suiteXmlFiles> 
								<suiteXmlFile>${suite.xml}</suiteXmlFile> 
							</suiteXmlFiles>  
							<systemPropertyVariables>
								<testRoot>${basedir}</testRoot>
								<org.uncommons.reportng.escape-output>false</org.uncommons.reportng.escape-output>
								<testResultScreenshots>${test.result.screenshots}</testResultScreenshots>
                                <testResultVideos>${test.result.videos}</testResultVideos>
								
								<!-- <testResultScreenshots>true</testResultScreenshots>
								<testResultVideos>true</testResultVideos> -->
							</systemPropertyVariables>
							<properties>
								<usedefaultlisteners>false</usedefaultlisteners>
								<workingDirectory>target/surefire-reports/</workingDirectory>
							</properties>
						</configuration>
						<goals>
							<goal>integration-test</goal>
						</goals>
					 	</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.3.2</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>test-jar</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<outputDirectory>target/autolab</outputDirectory>
					<archive>
						<manifest>
							<mainClass>com.intuit.ifs.csscat.core.RunTestNGSuite</mainClass>
						</manifest>
					</archive>
					
				</configuration>
			</plugin>
		 	
		</plugins>
		
		
		
	</build>
</project>
  
